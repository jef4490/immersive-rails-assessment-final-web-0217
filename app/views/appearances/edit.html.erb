<h1>Edit an Appearance</h1>
<% if @appearance.errors.any? %>
  <%= @appearance.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>

<% end %>

<%= form_for @appearance do |f| %>
  Episode: <%= @appearance.episode.date %><br>
  Guest: <%= @appearance.guest.name %><br>
  Producer: <%= @appearance.user.username %><br>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: (1..5) %><br>
  <%= f.submit %>
<% end %>
